<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Button Style -->
    <Style x:Key="PrimaryLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#0D47A1" />
    </Style>

    <!-- TextBlock Style -->
    <Style x:Key="PrimaryTextBox" TargetType="TextBox">
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="45" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderBrush" Value="#1976D2" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>
    <Style x:Key="UpdateButton" TargetType="Button">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#0D47A1" />
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderBrush" Value="#0D47A1" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="#0D47A1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderBrush" Value="#1976D2" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>
    <Style x:Key="PrimaryBorder" TargetType="Border">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderBrush" Value="#1565C0" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>


</ResourceDictionary>