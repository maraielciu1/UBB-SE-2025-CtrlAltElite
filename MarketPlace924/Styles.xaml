<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Label Style -->
    <Style x:Key="PrimaryLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#0D47A1" />
    </Style>

    <!-- TextBlock Style -->
    <Style x:Key="PrimaryTextBox" TargetType="TextBox">
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="45" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderBrush" Value="#1976D2" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <!-- Button Style -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="#0D47A1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderBrush" Value="#1976D2" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>

    <!-- Main Menu Button Style -->
    <Style x:Key="MainMenuButton" TargetType="Button">
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="#0D47A1" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderBrush" Value="#1976D2" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Width" Value="175"/>
    </Style>

    <!-- Border Style -->
    <Style x:Key="PrimaryBorder" TargetType="Border">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderBrush" Value="#1565C0" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
    </Style>

    <!-- Seller Item Style -->
    <Style x:Key="SellerItemGrid" TargetType="Grid">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderBrush" Value="#0D47A1"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <!-- PersonPicture Style -->
    <Style x:Key="PersonPictureStyle" TargetType="PersonPicture">
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#FFFFFF"></Setter>
        <Setter Property="Foreground" Value="#0D47A1"></Setter>
        <Setter Property="BorderBrush" Value="#0D47A1"></Setter>
    </Style>

    <!-- TextBlock Style for Seller Name -->
    <Style x:Key="SellerNameTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#0D47A1"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
</ResourceDictionary>