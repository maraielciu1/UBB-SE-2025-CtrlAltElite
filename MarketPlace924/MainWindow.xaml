<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MarketPlace924.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketPlace924.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MarketPlace924">

    <Grid>
        <!-- Main Container for Menu and Content -->
        <Border x:Name="MenuAndStage" Visibility="{x:Bind MenuAndStageVisibility, Mode=OneWay}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- Adjusted height for responsiveness -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Navigation Bar -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#EEE" Padding="10">
                    <Button Content="Profile"
                            Click="{x:Bind NavigateToBuyerProfile}"
                            HorizontalAlignment="Left"
                            Margin="5" />
                </StackPanel>

                <!-- Main Content Area -->
                <ScrollViewer Grid.Row="1" Padding="20">
                    <Frame x:Name="Stage" Background="#FFFFFF" />
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Login UI (Hidden when logged in) -->
        <Border Visibility="{x:Bind LoginVisibility, Mode=OneWay}">
            <TextBlock Text="Please log in to access MarketPlace924" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="20"/>
        </Border>
    </Grid>
</Window>
