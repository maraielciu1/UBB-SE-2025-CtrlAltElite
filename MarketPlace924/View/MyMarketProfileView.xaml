<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketPlace924.View.MyMarketProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketPlace924.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Defines the columns of the grid -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Main Content (this will contain all the profile details and the product grid) -->
        </Grid.ColumnDefinitions>

        <!-- Main Content Grid (all the profile and product sections are inside this grid) -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Seller Info (Profile section) -->
                <RowDefinition Height="Auto"/>
                <!-- Controls (Search, Filter, etc.) -->
                <RowDefinition Height="*"/>
                <!-- Products Grid (Displays the products from the seller) -->
            </Grid.RowDefinitions>

            <!-- Seller Profile Section -->
            <Border>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal">
                        <!-- Back button to return to the MyMarket page -->
                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                            <Button Content="Back" Click="GoBackToMyMarket" Width="55" Height="40" Margin="10,0,0,0" />
                        </StackPanel>
                        <!-- Profile Picture of the seller -->
                        <PersonPicture x:Name="ProfilePicture" DisplayName="{Binding StoreName}" Margin="0,0,10,0" />
                        <StackPanel MaxWidth="300">
                            <!-- Store Name -->
                            <TextBlock x:Name="DisplayName" Text="{Binding StoreName}" FontSize="24" FontWeight="Bold" TextWrapping="Wrap" />
                            <!-- Seller's Username -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Username:" FontWeight="Bold" />
                                <TextBlock x:Name="Username" Text="{Binding Username}" Margin="5,0,0,0" TextWrapping="Wrap" />
                            </StackPanel>
                            <!-- Seller's Email -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Email:" FontWeight="Bold" />
                                <TextBlock x:Name="Email" Text="{Binding Email}" Margin="5,0,0,0" TextWrapping="Wrap" />
                            </StackPanel>
                            <!-- Seller's Phone Number -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Phone:" FontWeight="Bold" />
                                <TextBlock x:Name="PhoneNumber" Text="{Binding PhoneNumber}" Margin="5,0,0,0" TextWrapping="Wrap" />
                            </StackPanel>
                            <!-- Seller's Address -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Address:" FontWeight="Bold" />
                                <TextBlock x:Name="Address" Text="{Binding Address}" Margin="5,0,0,0" TextWrapping="Wrap" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Seller's followers count and trust score -->
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="20,0,0,0">
                            <!-- Followers count -->
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="Followers:" FontWeight="Bold" FontSize="18" />
                                <TextBlock x:Name="Followers" Text="{Binding FollowersCount}" Margin="5,0,0,0" FontSize="18" />
                            </StackPanel>
                            <!-- Trust score represented by a progress bar -->
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="Trust Score:" FontWeight="Bold" FontSize="18" />
                                <ProgressBar x:Name="TrustScore" Value="{Binding TrustScore}" Maximum="100" Width="100" Height="20" Margin="5,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Button to follow/unfollow the seller profile -->
                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
                            <Button Content="{Binding FollowButtonText}" Command="{Binding FollowCommand}" Background="{Binding FollowButtonColor}" Width="150" Height="40" Margin="10,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Search & Controls Section (for searching and filtering products) -->
            <Grid Grid.Row="1" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Search Box -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Buttons (Filter and Sort) -->
                </Grid.ColumnDefinitions>

                <!-- Search Box for filtering products -->
                <TextBox PlaceholderText="Search" TextChanged="OnSearchProductTextChanged" Grid.Column="0" Margin="0,0,10,0" Height="40" HorizontalAlignment="Stretch"/>

                <!-- Filter and Sort buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Button Content="Filter" Margin="5" MinWidth="120" Width="Auto"/>
                    <Button Content="Sort" Margin="5" MinWidth="120" Width="Auto"/>
                </StackPanel>
            </Grid>

            <!-- Product Grid (Displays the products in a scrollable grid) -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding SellerProducts}">
                    <!-- Items Panel for displaying products in a wrapped grid layout -->
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid ItemWidth="300" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <!-- Template for displaying each product -->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightGray" Padding="10" CornerRadius="10" Margin="5">
                                <StackPanel>
                                    <!-- Product Name -->
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                                    <!-- Product Price -->
                                    <TextBlock Text="{Binding Price}" Foreground="Green"/>
                                    <!-- Product Description -->
                                    <TextBlock Text="{Binding Description}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
