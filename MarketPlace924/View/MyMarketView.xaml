<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarketPlace924.View.MyMarketView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketPlace924.View"
    xmlns:models="using:MarketPlace924.Domain"
    xmlns:viewModels="using:MarketPlace924.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Width="150" HorizontalAlignment="Stretch" Background="#00502020" VerticalAlignment="Stretch" Padding="10">
            <Button Content="Home" Height="40" Margin="0,0,0,10" Foreground="#FF001EFF" BorderThickness="0">
                <Button.Background>
                    <SolidColorBrush/>
                </Button.Background>
            </Button>
            <Button Content="Profile" Height="40" Margin="0,0,0,10" Foreground="#FF001EFF">
                <Button.Background>
                    <SolidColorBrush/>
                </Button.Background>
            </Button>
            <Button Content="MyMarket" Height="40" Background="#FF0046EA" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Column="1" Background="#FFF0F0F0" Padding="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Source="https://userware-xaml-designer-backend-api.azurewebsites.net/images/logo.png"
                       HorizontalAlignment="Left" Width="64" Height="64" Margin="0,0,10,0" />
                <TextBlock Text="My Market" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1"/>
            </Grid>

            <!-- Search + Buttons -->
            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox PlaceholderText="Search" TextChanged="OnSearchProductTextChanged" Grid.Column="0" Margin="0,0,10,0" Height="40" HorizontalAlignment="Stretch"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Button Content="Filter" Margin="5" MinWidth="120" Width="Auto"/>
                    <Button Content="Sort" Margin="5" MinWidth="120" Width="Auto"/>
                </StackPanel>
            </Grid>

            <!-- Scrollable Area -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                <ListView ItemsSource="{Binding MyMarketProducts}" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Product">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" FontSize="14"/>
                                <TextBlock Text="{Binding Price}" FontSize="16" Foreground="Green"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Grid>

        <!-- Overlapping Layer: Button + Following List -->
        <Grid Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0">
            <Grid x:Name="FollowingList" Background="#FFF0F0F0" Visibility="{Binding FollowingListVisibility}" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button x:Name="HideFollowing" Content="X" Command="{Binding ShowFollowingCommand}" Width="40" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,0" Grid.Row="0"/>
                <TextBox PlaceholderText="Search" TextChanged="OnSearchSellerTextChanged" HorizontalAlignment="Center" Width="160" Height="32" Margin="8" Grid.Row="1"/>
                <ScrollViewer VerticalScrollBarVisibility="Visible" Width="230" Margin="8" Grid.Row="2">
                    <ListView ItemsSource="{Binding MyMarketFollowing}">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="MinHeight" Value="70"/>
                                <Setter Property="Padding" Value="10"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Seller">
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- PersonPicture -->
                                    <PersonPicture x:Name="ProfilePicture" DisplayName="{Binding StoreName}" Tapped="OnPersonPictureTapped" Width="40" Height="40" Margin="0,0,10,0" Grid.Column="0" VerticalAlignment="Center"/>
                                    <!-- Seller Name -->
                                    <TextBlock Text="{Binding StoreName}" FontSize="15" FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="1" TextTrimming="CharacterEllipsis"/>
                                    <!-- Unfollow Button -->
                                    <Button Content="Unfollow" FontSize="12" Height="35" VerticalAlignment="Center" Grid.Column="2"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>

            <!-- The Button behind -->
            <Button x:Name="ShowFollowing" Command="{Binding ShowFollowingCommand}" Visibility="{Binding ShowFollowingVisibility}" Width="120" Height="70" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="103" Height="55" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Text="723" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Text="Following" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontWeight="Bold" />
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Page>
