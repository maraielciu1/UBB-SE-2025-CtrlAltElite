<?xml version="1.0" encoding="utf-8"?>
<Page 
    x:Class="MarketPlace924.View.SellerProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketPlace924.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Main Content Grid -->
        <Grid Grid.Column="1" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Seller Info -->
                <RowDefinition Height="Auto"/>
                <!-- Controls (Search, Filter, etc.) -->
                <RowDefinition Height="*"/>
                <!-- Products Grid -->
            </Grid.RowDefinitions>

            <!-- Seller Profile Section -->
            <Border>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <!--" Profile Picture doesn't show right-->
                        <PersonPicture x:Name="ProfilePicture" DisplayName="{Binding StoreName}" Margin="180,0,40,0" />
                        <StackPanel MaxWidth="300">
                            <TextBlock x:Name="DisplayName" Text="{Binding StoreName}" FontSize="36" FontWeight="Bold" TextWrapping="Wrap" Margin="0,20,0,10" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Email:" FontWeight="Bold" Foreground="Aquamarine"/>
                                <TextBlock x:Name="Email" Text="{Binding Email}" Margin="5,0,0,0" TextWrapping="Wrap" Foreground="Aquamarine" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Phone:" FontWeight="Bold" />
                                <TextBlock x:Name="PhoneNumber" Text="{Binding PhoneNumber}" Margin="5,0,0,0" TextWrapping="Wrap" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Address:" FontWeight="Bold" />
                                <TextBlock x:Name="Address" Text="{Binding Address}" Margin="5,0,0,0" TextWrapping="Wrap" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Description: " FontWeight="Bold" />
                                <TextBlock x:Name="Description" Text="{Binding Description}" Margin="5,0,0,0" TextWrapping="Wrap" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="90,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="Followers:" FontWeight="Bold" FontSize="18" />
                                <TextBlock x:Name="Followers" Text="{Binding FollowersCount}" Margin="5,0,0,0" FontSize="18" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock Text="Trust Score:" FontWeight="Bold" FontSize="18" />
                                <ProgressBar x:Name="TrustScore" Value="{Binding TrustScore}" Maximum="100" Width="100" Height="20" Margin="5,0,0,0" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="50,0,0,0">
                            <Button Content="Update Profile" Click="OnUpdateProfileButtonClick" Width="150" Height="40" Margin="10,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Search & Controls Section -->
            <Grid Grid.Row="1" Margin="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Search Box -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Buttons -->
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <TextBox PlaceholderText="Search" Grid.Column="0" Margin="0,0,10,0" Height="40" HorizontalAlignment="Stretch" TextChanged="OnSearchTextChanged"/>

                <!-- Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Button Content="Filter" Margin="5" MinWidth="120" Width="Auto"/>
                    <Button Content="Sort" Margin="5" MinWidth="120" Width="Auto"/>
                    <Button Content="+ Add Product" Margin="5" MinWidth="170" Width="Auto"/>
                </StackPanel>
            </Grid>

            <!-- Product Grid (Using Only Grid) -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid ItemWidth="300" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightGray" Padding="10" CornerRadius="10" Margin="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Price}" Foreground="Green"/>
                                    <TextBlock Text="{Binding Description}"/>
                                    <TextBlock Text="{Binding Stock}" Foreground="{Binding Stock, Converter={StaticResource StockToColorConverter}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
        </Grid>
        
        <!-- Notifications Panel (Fixed to the Right) -->

        <StackPanel  Grid.Column="1" Width="Auto" Height="Auto" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Padding="10">
            <Expander
                 IsExpanded="{Binding IsExpanderExpanded, Mode=TwoWay}"
                 ExpandDirection="Down"
                 VerticalAlignment="Top"
                 Header="ðŸ”” Notifications"
                 Width="300"
                 MaxHeight="200">       
                <ListBox ItemsSource="{Binding Notifications}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
    