<UserControl
    x:Class="MarketPlace924.View.BuyerBadgeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="Auto" Height="Auto">

    <StackPanel>
        <!-- Profile Picture -->
        <Image Source="{x:Bind ImageSource}" Width="50" Height="50"
               HorizontalAlignment="Right" VerticalAlignment="Top" />

        <!-- Badge with Progress Bar -->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Orientation="Vertical"
                    Spacing="5">
            <!-- Badge Text -->
            <TextBlock Text="{x:Bind BadgeName}" FontSize="14" Foreground="#1976D2"
                       FontFamily="Segoe UI Semibold" />

            <!-- Progress Bar -->
            <ProgressBar Width="150" Height="20" Minimum="0" Maximum="100" Value="{x:Bind Progress}"
                         Background="#e0e0e0" Foreground="#1976D2" />

        </StackPanel>
    </StackPanel>

</UserControl>